<!doctype html>
<html>
<head>
    <title>21 Savage Fan Site</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="jumbotron text-center">
        <h1>21 Savage Fan Site</h1>
        <img src="img/shutterstock_687139360.webp" alt="Cashier Photo">

        <p>Login or Signup:</p>

        <a href="/login" class="btn btn-default"><span class="fa fa-user"></span>Login</a>
        <a href="/signup" class="btn btn-default"><span class="fa fa-user"></span>Signup</a>

    </div>


</div>

<section class="CashierContainer">
   <div class="CashierTitle">
     <h2>Cashier: Input Order Below</h2>
   </div>
   
   <form class="CashierTitle" action="/messages" method="POST">
     <input type="text" class='name2' value="" placeholder="customer name" name="name">
     <input type="text" class='order2' placeholder="type of smoothie" name="order" >
     <br>
     <label for="espresso">Banana</label>
     <input type="radio" placeholder="Espresso Shot" name="espresso">
     <label for="caramel">Strawberry</label>
     <input type="radio" placeholder="Caramel Pump" name="caramel">
     <label for="sugar">Mango</label>
     <input type="radio" placeholder="sugar" name="sugar">
     <label for="cream">Blueberry</label>
     <input type="radio" placeholder="Cream" name="cream">
     <label for="milk">Kale</label>
     <input type="radio" placeholder="Milk" name="milk">
     <br>
     <select class="Size" name="size">
       <option  value="Small">Small</option>
       <option value="Medium">Medium</option>
       <option value="Large">Large</option>
     </select>
     <button type="submit">Submit</button>
   </form>
   </section>
</body>
</html>
